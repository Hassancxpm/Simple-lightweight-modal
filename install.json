{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/styles.css"
      },
      {
        "type": "script",
        "src": "./build/index.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["_default"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "order": 0,
        "title": "Location",
        "description": "Where should the app appear on your site?",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "title": {
        "order": 1,
        "title": "Title",
        "type": "string",
        "default": "Title",
        "placeholder": "Put your title here."
      },
      "message": {
        "order": 2,
        "title": "Message",
        "type": "string",
        "format": "richtext",
        "default": "Hello world!",
        "placeholder": "Put your message here."
      },
      "showAdvanced": {
        "order": 3,
        "type": "boolean",
        "title": "Show advanced options",
        "default": false
      },
      "ShowOnlyOnce": {
        "showIf": {
          "showAdvanced": true
        },
        "order": 4,
        "type": "string",
        "format": "radios",
        "enum": ["true", "false"],
        "enumNames": {
          "true": "Show this popup only once per user",
          "false": "Show this popup only every time the page is loaded"
        },
        "title": "Show this popup only once per user?",
        "default": "true"
      },
      "PopupButton": {
        "showIf": {
          "showAdvanced": true
        },
        "order": 5,
        "title": "Add a confirmation button to the popup",
        "type": "string",
        "format": "radios",
        "enum": ["false", "true"],
        "enumNames": {
          "false": "Remove the confirmation button",
          "true": "Display a confirmation button on the popup"
        },
        "default": "false"
      },
      "ButtonTitle": {
        "showIf": {
          "PopupButton": "true"
        },
        "order": 6,
        "title": "Button Title",
        "type": "string",
        "default": "OK",
        "placeholder": "Put the button title here."
      },
      "ButtonBehaviorRedirect": {
        "showIf": {
          "PopupButton": "true"
        },
        "order": 7,
        "title": "Redirect when click on the button",
        "type": "string",
        "format": "radios",
        "enum": ["false", "true"],
        "enumNames": {
          "false": "Close the popup when users click on the button",
          "true": "Redirect when users click on the button"
        },
        "default": "false"
      },
      "ButtonTextColor":{
        "showIf": {
          "PopupButton": "true"
        },
        "order": 8,
        "default": "#000000",
        "format": "color",
        "title": "Text Button color",
        "description": "Default is #000000",
        "type": "string"
      },
      "UrlRedirection": {
        "showIf": {
          "ButtonBehaviorRedirect": "true"
        },
        "order": 9,
        "type": "string",
        "title": "Specify an URL to drive traffic",
        "placeholder": "https://example.com"
      },
      "ModalMessageColor": {
        "showIf": {
          "showAdvanced": true
        },
        "order": 10,
        "default": "#000000",
        "format": "color",
        "title": "Message color",
        "description": "Default is #000000",
        "type": "string"
      },
      "ModalButtonColor": {
        "showIf": {
          "showAdvanced": true
        },
        "order": 11,
        "default": "#d3d3d3",
        "format": "color",
        "title": "Buttons color",
        "description": "Default is #d3d3d3",
        "type": "string"
      },
      "ModalTitleColor": {
        "showIf": {
          "showAdvanced": true
        },
        "order": 12,
        "default": "#000000",
        "format": "color",
        "title": "Title color",
        "description": "Default is #000000",
        "type": "string"
      },
      "radius": {
        "showIf": {
          "showAdvanced": true
        },
        "title": "How rounded should the popup appear?",
        "format": "slider",
        "order": 13,
        "type": "number",
        "default": 0.05,
        "step": 0.01,
        "minimum": 0,
        "maximum": 0.12
      },
      "AddFrenchTraduction": {
        "showIf": {
          "showAdvanced": true
        },
        "order": 14,
        "title": "Do you want to add a French traduction?",
        "description": "If activated, this options detects the html tag 'lang' attribute and load the French traductions",
        "type": "string",
        "format": "radios",
        "enum": ["false", "true"],
        "enumNames": {
          "false": "The same message in all pages",
          "true": "Add a French traduction"
        },
        "default": "false"
      },
      "FrenchTitle": {
        "showIf": {
          "AddFrenchTraduction": "true"
        },
        "order": 15,
        "title": "French Title",
        "type": "string",
        "default": "Titre",
        "placeholder": "Votre titre ici."
      },
      "FrenchMessage": {
        "showIf": {
          "AddFrenchTraduction": "true"
        },
        "order": 16,
        "title": "French Message",
        "type": "string",
        "format": "richtext",
        "default": "Bonjour !",
        "placeholder": "Votre message ici."
      },
      "FrenchButtonTitle": {
        "showIf": {
          "AddFrenchTraduction": "true"
        },
        "order": 17,
        "title": "French Button Title",
        "type": "string",
        "default": "OK",
        "placeholder": "Le nom du bouton ici."
      }
    }
  }
}
